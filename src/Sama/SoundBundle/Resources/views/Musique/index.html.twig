{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Musique list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idmusique</th>
                <th>Nom</th>
                <th>Auteur</th>
                <th>Album</th>
                <th>Photo</th>
                <th>Sortie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('musique_show', { 'id': entity.idmusique }) }}">{{ entity.idmusique }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.auteur }}</td>
                <td>{{ entity.album }}</td>
                <td>{{ entity.photo }}</td>
                <td>{% if entity.sortie %}{{ entity.sortie|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('musique_show', { 'id': entity.idmusique }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('musique_edit', { 'id': entity.idmusique }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('musique_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
